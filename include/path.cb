link "cobra_path";

namespace Path {
    external string join(string base, string addition) as "path_join";
    external string absolute(string path) as "path_absolute";
    external string dirname(string path) as "path_dirname";
    external string basename(string path) as "path_basename";
    external string extension(string path) as "path_extension";
    external bool isAbsolute(string path) as "path_isAbsolute";
    external string normalize(string path) as "path_normalize";
}