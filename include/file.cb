link "cobra_file";

namespace File {
    external handle open(string path, string mode) as "file_open";
    external void close(handle fileHandle) as "file_close";
    external int seek(handle fileHandle, int offset, int whence) as "file_seek";
    external int tell(handle fileHandle) as "file_tell";
    external bool eof(handle fileHandle) as "file_eof";
    external int flush(handle fileHandle) as "file_flush";
    external bool exists(string path) as "file_exists";
}